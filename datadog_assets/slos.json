[
  {
    "name": "SentinelLM Latency SLO",
    "type": "metric",
    "description": "95% of LLM requests should complete within 2000ms",
    "tags": ["service:sentinellm", "team:ai-ops"],
    "thresholds": [
      {
        "target": 95.0,
        "target_display": "95.0",
        "timeframe": "7d",
        "warning": 97.0,
        "warning_display": "97.0"
      }
    ],
    "query": {
      "numerator": "sum:sentinellm.llm.latency_ms{latency_ms<2000}.as_count()",
      "denominator": "sum:sentinellm.llm.latency_ms{*}.as_count()"
    }
  },
  {
    "name": "SentinelLM Error Rate SLO",
    "type": "metric",
    "description": "Error rate should be less than 1%",
    "tags": ["service:sentinellm", "team:ai-ops"],
    "thresholds": [
      {
        "target": 99.0,
        "target_display": "99.0",
        "timeframe": "7d",
        "warning": 99.5,
        "warning_display": "99.5"
      }
    ],
    "query": {
      "numerator": "sum:sentinellm.request.error{status:ok}.as_count()",
      "denominator": "sum:sentinellm.request.error{*}.as_count()"
    }
  }
]
